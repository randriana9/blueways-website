mixin brand-container
    .brand-image-container
        img.brand-logo-transparent(src="images/logo_white.png")
        img.brand-logo-normal(src="images/logo.png")
        
nav(class=["navbar", "navbar-default", "navbar-fixed-top"])
    .container-fluid
        .navbar-header
            button(type="button" class=["navbar-button","navbar-toggle", "collapsed"])
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            .language-bar
                a(href="#" class="dropdown-button") #{lang}
                    span.caret
                ul.dropdown-menu
                    li: a(href="/en") EN
                    li: a(href="/fr") FR
                    li: a(href="/") NO
            .navbar-brand
                span.brand-name
                    if lang == "NO"
                        a(href="/") BLUEWAYS
                    else
                        a(href="/"+lang) BLUEWAYS
                if lang == "NO"
                    a(href="/")
                        +brand-container
                else
                    a(href="/"+lang)
                        +brand-container
                

.navbar-overlay
    ul
        if lang == "EN"
            li: a(href="/en") HOME
            li: a(href="/en/about") ABOUT US
            li: a(href="/en/projects") OUR PROJECTS
            li: a(href="/en/contact") CONTACT
            li: a(href="/en/member") BECOME A MEMBER
            li: a(href="/en/support") YOUR SUPPORT
        else if lang == "FR"
            li: a(href="/fr") ACCUEIL
            li: a(href="/fr/about") L'ORGANISATION
            li: a(href="/fr/projects") NOS PROJETS
            li: a(href="/fr/contact") NOUS CONTACTER
            li: a(href="/fr/member") DEVENIR MEMBRE
            li: a(href="/fr/support") FAIRE UN DON
        else
            li: a(href="/") HJEM
            li: a(href="/about") OM OSS
            li: a(href="/projects") VÅRE PROSJEKTER
            li: a(href="/contact") KONTAKT
            //li: a(href="/news") NYHETER
            li: a(href="/member") BLI MEDLEM
            li: a(class="support-us" href="/support") GI STØTTE