extends ./layouts/base.pug
block variables
    - var lang = 'NO'
prepend content
    header
        .image-header
            img(src="images/man.jpg")
    .headerhr-primary
    #contact-body
        .container
            .form-container
                .form-container-header
                    h1 BLI MEDLEM I BLUEWAYS
                    p Bli medlem i Blueways idag.
                    p Medlemskap: kr 200 person/år
                    p Min. alder: 15 år.
                .form-container-body
                    .form-layout
                        .form-header
                            h2 Innmelding
                            hr
                        .form-body
                            form(action="/mail/member" method="POST")
                                .row
                                    .col-md-6
                                        label.form-requires-symbol(for="firstname") Fornavn
                                        input#name(type="text" name="firstname" required)
                                    .col-md-6
                                        label.form-requires-symbol(for="lastname") Etternavn
                                        input#name(type="text" name="lastname" required)
                                .row
                                    .col-md-6
                                        label.form-requires-symbol(for="birthday") Fødselsdato
                                        input#name(type="text" name="birthday" required)
                                    .col-md-6
                                        label.form-requires-symbol(for="address") Addresse
                                        input#name(type="text" name="address" required)
                                .row
                                    .col-md-6
                                        label.form-requires-symbol(for="city") Poststed
                                        input#name(type="text" name="city" required)
                                    .col-md-6
                                        label.form-requires-symbol(for="zipcode") Postnummer
                                        input#name(type="text" name="zipcode" required)
                                .row
                                    .col-md-6
                                        label.form-requires-symbol(for="email") E-post
                                        input#email(type="email" name="email" required)
                                    .col-md-6
                                        label(for="mobile") Mobil
                                        input#mobile(type="number" name="mobile")
                            
                                input#submitbutton(type="submit" value="Send skjema")